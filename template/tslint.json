{
    "extends": "tslint-config-standard",
    "globals": {
        "require": true
    },
    "rules": {
        "semicolon": [
            true,
            "always"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "eofline": true,
        "space-before-function-paren": [
            true,
            "never"
        ],
        "ter-indent": [
            true,
            4
        ],
        "no-any": false,
        "no-angle-bracket-type-assertion": false
    }
}
